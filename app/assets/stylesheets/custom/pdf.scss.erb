// 11. Legislation Process PDF
// --------------

.header-pdf {
  height: 100px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 30px 0;
  .org {
    img {
      height: 70px;
      width: auto;
      margin: 0;
    }
  }
  .logo {
    img {
      height: 20px;
      width: auto;
      margin-right: 30px;
    }
  }
}
.process-pdf {
  .content {
    width: 100%;
    .title {
      font-family: 'Lato PDF';
      color: black !important;
      border-bottom: none;
      text-align: center;
      font-size: 20px;
    }
    .text {
      font-family: 'Lato PDF';
      margin-top: 30px;
      font-size: normal;
    }
    .code {
      max-width: 70%;
      text-align: center;
      margin: auto;
      font-style: italic;
    }
    .description {
      font-family: 'Lato PDF';
      width: 70%;
      margin: auto;
    }
    .link {
      text-align: center;
    }
    .date {
      text-align: center;
      font-style: italic;
    }
    .comment-info {
      padding-left: 20px;
      margin-botton: 40px;
    }
  }
}

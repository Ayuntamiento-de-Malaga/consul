// 11. Legislation Process PDF
// --------------

.header-pdf {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 30px;
  .org {
    img {
      height: 80px;
      width: auto;
      margin: 0;
    }
  }
  .logo {
    img {
      height: 40px;
      width: auto;
      margin-right: 30px;
    }
  }
}
.footer-pdf {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-top: 30px;
  .address,
  .contact
   {
    color: #00587C;
    border-top: 1px solid #00587C;
  }
  .address {
    .bold {
      font-weight: 700;
    }
  }
}
.process-pdf {
  .content {
    width: 100%;
    .title {
      font-family: 'Lato PDF';
      color: black !important;
      border-bottom: none;
      text-align: center;
      font-size: 20px;
    }
    .text {
      font-family: 'Lato PDF';
      margin-top: 30px;
      font-size: normal;
    }
    .code {
      max-width: 70%;
      text-align: center;
      margin: auto;
      font-style: italic;
    }
    .description {
      font-family: 'Lato PDF';
      width: 70%;
      margin: auto;
    }
    .link {
      text-align: center;
    }
    .date {
      text-align: center;
      font-style: italic;
    }
  }
}

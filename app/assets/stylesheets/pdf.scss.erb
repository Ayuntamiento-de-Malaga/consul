// 11. Legislation Process PDF
// --------------

.header-pdf {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 30px;
  .org {
    img {
      height: 80px;
      width: auto;
      margin: 0;
    }
  }
  .logo {
    img {
      height: 40px;
      width: auto;
      margin-right: 30px;
    }
  }
}
.footer-pdf {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-top: 30px;
  .address,
  .contact
   {
    color: #00587C;
    border-top: 1px solid #00587C;
  }
  .address {
    .bold {
      font-weight: 600;
    }
  }
}
.process-pdf {
  .content {
    width: 100%;
    .title {
      font-family: 'Matter';
      color: black !important;
      border-bottom: none;
      text-align: center;
      font-size: 18px;
    }
    .text {
      font-family: 'Matter';
      margin-top: 30px;
      font-size: 14px;
      font-weight: lighter;
    }
    .code {
      font-family: 'Matter';
      max-width: 70%;
      text-align: center;
      margin: auto;
      font-style: italic;
      font-size: 14px;
    }
    .description {
      font-family: 'Matter';
      width: 70%;
      margin: auto;
      font-size: 14px;
    }
    .link {
      font-family: 'Matter';
      text-align: center;
      font-size: 14px;
    }
    .date {
      font-family: 'Matter';
      text-align: center;
      font-style: italic;
      font-size: 14px;
    }
  }
}
